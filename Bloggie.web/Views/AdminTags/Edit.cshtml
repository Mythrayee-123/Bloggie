@model Bloggie.web.Models.ViewModel.EditTagRequest
@{
}
<div class="bg-secondary bg-opacity-10 py-2">
    <div class="container">
        <h1>Edit tags-Admin Functionality</h1>
    </div>
</div>
<div class="container py-5">
    <form method="post">
        <div class="mb-3">
            <label class="form-label">Id</label>
            <input type="text" class="form-control" asp-for="Id" readonly />
        </div>
        <div class="mb-3">
            <label class="form-label">Name</label>
            <input type="text" class="form-control" id="name" asp-for="Name" />
        </div>
        <div class="mb-3">
            <label class="form-label">Display Name</label>
            <input type="text" class="form-control" id="displayname" asp-for="DisplayName" />
        </div>

        <div class="mb-3">
            <div class="d-flex">
                <button type="Submit" class="btn btn-dark" >
                       
                    Update
                </button>

                <button type="Submit" class="btn btn-danger ms-2" asp-area="" asp-controller="AdminTags"
                        asp-action="Delete">
                    Delete
                </button>
            </div>
           
        </div>

    </form>
</div>
