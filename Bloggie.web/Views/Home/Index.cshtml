@model Bloggie.web.Models.ViewModel.HomeViewModel
@{
    ViewData["Title"] = "Home Page";
}
<div class="container  col-xxl-8 px-4 py-5">
    <div class="row align-items-center g-5 py-5">
        <div class="col-12 col-lg-6">
            <h1 class="display-5 fw-bold lh-1 mb-3">
                Bloggie- The Dev Blog

            </h1>
            <p class="lead">
                Bloggie is the home for coding blogs covering a vast range of
                topics like HTML,CSS,Javascript,ASP.NET,C#,Angular etc.
                Want o theread the latest dev article?Join the Bloggie app and
                get weekly blogs in your email.
            </p>
        </div>
        <div class=" col-12 col-lg-6">
            <img src="https://images.pexels.com/photos/326503/pexels-photo-326503.jpeg?auto=compress&cs=tinysrgb&w=600"
            alt="Bloggie-Dev blogs"
            class="d-block mx-lg-auto img-fluid width=300"/>

        </div>
    </div>
</div>
<div class="Container">
    <div class="row justify-content-center">
        <div class="col-6 d-flex">
            @if(Model!=null && Model.Tag.Any())
            {
                @foreach(var tag in Model.Tag)
                {
                    <span class="badge bg-secondary me-1">
                        @tag.Name
                    </span>
                }
            }
        </div>
    </div>
</div>
<br />
<div class="Container">
    <div class="row justify-content-center">
        <div class="col-6">
            @if(Model!=null && Model.BlogPost.Any())
            {
                foreach(var blog in Model.BlogPost)
                {
                    <div class="mb-5 bg-light box-shadow">
                        <img src="@blog.FeaturedImageUrl" alt="@blog.Heading"
                        class="mg-2 d-block img-fluid"/>
                        <h2 class="mb-4">@blog.Heading</h2>
                        <p class="mb-2">
                            Author:@blog.Author
                            <br/>
                            Published Date:@blog.PublishedDate.ToShortDateString()
                        </p>
                       <p class="mb-4">
                            @foreach (var tag in blog.tags)
                            {
                                <span class="badge bg-secondary me-1">@tag.Name</span>
                            }
                       </p>
                                                  
                        <p class="mb-5">
                            @blog.ShortDescription
                        </p>                           
                        
                        <a class="btn btn-dark" 
                        asp-area=""
                        asp-controller="Blogs"
                        asp-action="Index"
                        asp-route-urlHandle="@blog.UrlHandle">
                        Read more
                    </a>
                    </div>
                }
            }
        </div>
    </div>
    </div>
